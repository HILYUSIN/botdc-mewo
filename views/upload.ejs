<!DOCTYPE html>
<html>
<head>
    <title>Upload Info</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('menu') %>
    
    <div class="main-content">
        <h2 class="page-title">ðŸ“¢ Upload Konten</h2>
        
        <div class="card-glass" style="max-width: 700px">
            <form action="/post-info" method="POST" enctype="multipart/form-data">
                
                <div class="mb-3">
                    <label class="stat-label mb-2">Pilih Channel Discord</label>
                    <select name="targetChannel" class="form-select">
                        <% channels.forEach(c => { %>
                            <option value="<%= c.id %>"># <%= c.name %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="row mb-3">
                    <div class="col-md-8">
                        <label class="stat-label mb-2">Judul</label>
                        <input type="text" name="judul" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label class="stat-label mb-2">Tipe</label>
                        <select name="tipe" class="form-select">
                            <option value="Info">Info</option>
                            <option value="Event">Event</option>
                            <option value="Warning">Warning</option>
                            <option value="Showcase">Showcase</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="stat-label mb-2">Isi Pesan</label>
                    <textarea name="pesan" class="form-control" rows="5"></textarea>
                </div>
                <div class="mb-3">
                    <label class="stat-label mb-2">Mau Tag Siapa? (Notifikasi)</label>
                    <select name="mentionType" class="form-select">
                        <option value="">ðŸ”• Tidak Tag Siapa-siapa (Silent)</option>
                        <option value="@everyone">ðŸ“¢ @everyone (Tag SEMUA Member)</option>
                        <option value="@here">ðŸ”” @here (Tag yang Online Aja)</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary w-100">ðŸš€ POSTING KE DISCORD</button>
            </form>
        </div>
    </div>
</body>
</html>